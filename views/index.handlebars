<h1>Eat-Da-Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers that you are craving!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col">
      <h2>Burgers You Have Devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>  
</div>

<h2>Add a Burger!</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>